.page {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.header {
    position: relative;
    height: 240rpx;
    background: linear-gradient(135deg, #ffe6d9 0%, #fff3e0 100%);
    border-bottom: 1px solid #f0f0f0;
    overflow: hidden;
}

.title {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 44rpx;
    font-weight: 700;
    color: #7a4b2b;
    text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.cute-font {
    font-family: "Apple Color Emoji","PingFang SC","Hiragino Sans GB","Microsoft YaHei",sans-serif;
    letter-spacing: 2rpx;
}

.header-bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0.35;
}

.content {
    display: flex;
    flex: 1;
    min-height: 0;
    /*padding-bottom: 2rpx;*/
}

.sidebar {
    width: 200rpx;
    background: #fafafa;
    border-right: 1px solid #f0f0f0;
}

.category-item {
    padding: 24rpx 16rpx;
    color: #666;
}

.category-item.active {
    background: #ffffff;
    color: #111;
    font-weight: 600;
    border-left: 6rpx solid #111;
}

.dishes-panel {
    flex: 1;
    background: #ffffff;
}

.section-header {
    padding: 20rpx 24rpx 8rpx;
}

.section-title {
    font-size: 28rpx;
    color: #999;
}

.dishes {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
    padding: 0 24rpx 24rpx;
}

.dish-card {
    display: flex;
    gap: 20rpx;
    padding: 24rpx;
    border-radius: 16rpx;
    background: #f9fafb;
}
.dish-card.shake {
    animation: shake 300ms ease-in-out;
}

.dish-thumb {
    width: 64rpx;
    height: 64rpx;
    border-radius: 12rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
}

.dish-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.dish-action {
    margin-left: auto;
    display: flex;
    align-items: center;
}

.add-btn {
    width: 64rpx;
    height: 64rpx;
    /*border-radius: 50%;*/
    /*box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.15);*/
}

