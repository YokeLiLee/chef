@keyframes shake {
    0% { transform: translateX(0); }
    20% { transform: translateX(-6rpx); }
    40% { transform: translateX(6rpx); }
    60% { transform: translateX(-4rpx); }
    80% { transform: translateX(4rpx); }
    100% { transform: translateX(0); }
}

.shake {
    animation: shake 300ms ease-in-out;
}

.drawer-mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.35);
}

.cart-drawer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: -50vh;
    height:50vh;
    background: #fff;
    border-top-left-radius: 24rpx;
    border-top-right-radius: 24rpx;
    box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.08);
    transition: bottom 220ms ease-out;
    display: flex;
    flex-direction: column;
}

.cart-drawer.open {
    bottom: 0;
}

.drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24rpx;
    border-bottom: 1px solid #f0f0f0;
}

.drawer-list {
    flex: 1;
    min-height: 50rpx;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.drawer-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 24rpx;
    border-bottom: 1px solid #f7f7f7;
}

.drawer-left {
    display: flex;
    gap: 16rpx;
    align-items: center;
}

.drawer-emoji {
    width: 64rpx;
    height: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    background: #fff;
    border-radius: 12rpx;
}

.drawer-info {
    display: flex;
    flex-direction: column;
}

.drawer-name {
    font-size: 28rpx;
}

.drawer-desc {
    color: #999;
    font-size: 22rpx;
}

.drawer-right {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.drawer-count {
    color: #999;
}

.drawer-remove {
    font-size: 32rpx;
    color: #999;
    padding: 0 8rpx;
}

.drawer-empty {
    text-align: center;
    color: #999;
    padding: 40rpx 0;
}

.drawer-footer {
    padding: 24rpx;
    display: flex;
    justify-content: center;
    border-top: 1px solid #f0f0f0;
    padding-bottom: 120rpx;
}

.order-btn {
    background: #ff3b30;
    color: #fff;
    padding: 20rpx 40rpx;
    border-radius: 12rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: 600;
}

.cart-fab {
    position: fixed;
    left: 24rpx;
    bottom: 140rpx;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    background: #ffffff;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 20;
}

.cart-icon {
    font-size: 44rpx;
}

.cart-badge {
    position: absolute;
    right: -6rpx;
    top: -6rpx;
    min-width: 36rpx;
    height: 36rpx;
    padding: 0 8rpx;
    border-radius: 18rpx;
    background: #ff3b30;
    color: #fff;
    font-size: 22rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dish-name {
    font-size: 30rpx;
    font-weight: 600;
}

.dish-desc {
    font-size: 24rpx;
    color: #888;
}