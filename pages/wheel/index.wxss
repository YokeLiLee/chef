.page { display: flex; flex-direction: column; height: 100vh; }
.wheel-bg-big {
    display: flex;
    flex-direction: column;
    flex: 1;
    position: relative;
}
.wheel-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1; /* 确保背景图片在内容后面 */
}
.wheel-content { display: flex; flex-direction: column; flex: 1; min-height: 0; }
.categories { display: flex; flex-wrap: wrap; gap: 16rpx; padding: 16rpx; justify-content: center; max-width: 100%; } /* 允许按钮换行 */
.section { padding: 16rpx 16rpx 8rpx; }
.section-header { padding: 8rpx 0; }
.section-title { font-size: 28rpx; color: #999; text-align: center}
.dishes {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16rpx;
    padding: 8rpx 0;
}
