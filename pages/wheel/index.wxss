@keyframes scale {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}
.cat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8rpx;
    padding: 12rpx;
    border-radius: 16rpx;
    background: linear-gradient(to bottom, #ffffff, #f0f0f0); /* Subtle gradient for Apple-like depth */
    width: 100rpx; /* Smaller than dish-card (160rpx) */
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1), 0 1rpx 0 rgba(255,255,255,0.8) inset; /* Soft shadow and inner highlight */
    transition: all 0.2s ease; /* Smooth transition for animation */
}
.cat-card.scale {
    animation: scale 300ms ease-in-out; /* Apply scale animation */
}
.cat-thumb { font-size: 40rpx; } /* Smaller than dish-thumb (60rpx) */
.cat-name {
    font-size: 20rpx;
    font-weight: 600;
    text-align: center;
}
.wheel-center {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    gap: 4rpx;
}
.wheel-canvas {
    width: 600rpx;
    height: 600rpx;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
    margin: 0;
    padding: 0;
    position: relative;
    top: -8%;
}
