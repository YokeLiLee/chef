/*图片按钮样式*/
.wheel-arrow {
    position: absolute;
    width: 362rpx;
    height: 350rpx;
    left: 50%;
    top: calc(50% - 8%);
    transform: translate(-50%, -50%); /* Center the arrow */
    z-index: 1;
    filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.2));
}
.wheel-fab { position: fixed; right: 24rpx; bottom: 140rpx; width: 96rpx; height: 96rpx; border-radius: 50%; background: #ffffff; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08); display: flex; align-items: center; justify-content: center; z-index: 20; }
.wheel-fab-icon { font-size: 44rpx; }
.wheel-badge {
  position: absolute;
  right: -6rpx;
  top: -6rpx;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  border-radius: 18rpx;
  background: #ff3b30;
  color: #fff;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
 }

.drawer-mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.35);
}

.wheel-drawer {
    position: fixed; left: 0; right: 0; bottom: -50vh; height: 50vh; background: #fff; border-top-left-radius: 24rpx; border-top-right-radius: 24rpx; box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.08); transition: bottom 220ms ease-out; display: flex; flex-direction: column;
}
.drawer-list {
    height: calc(50vh - 144rpx);
    -webkit-overflow-scrolling: touch;
}
.drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24rpx;
    border-bottom: 1px solid #f0f0f0;
}

.drawer-empty {
    text-align: center;
    color: #999;
    padding: 40rpx 0;
}
.wheel-drawer.open {
    bottom: 0;
}

.drawer-name {
    font-size: 28rpx;
}
.drawer-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 24rpx;
    border-bottom: 1px solid #f7f7f7;
}
.drawer-remove {
    margin-left: auto;
    font-size: 32rpx;
    color: #999;
    padding: 0 8rpx;
}

.drawer-actions {
    padding: 24rpx;
    display: flex;
    justify-content: center;
    border-top: 1px solid #f0f0f0;
    padding-bottom: 120rpx;
}

.ghost {
    background: #ff3b30;
    color: #fff;
    padding: 20rpx 40rpx;
    border-radius: 12rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: 600;
}

