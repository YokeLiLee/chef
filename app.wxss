  /*  align-items: center;*/
  /*  justify-content: center;*/
  /*  position: relative; !* 保持在 Flex 流中 *!*/
}

.footer-box {
  display: flex;
  gap: 16rpx;
  padding: 10rpx env(safe-area-inset-left) 10rpx env(safe-area-inset-right);
  margin: 0;
  border-radius: 0;
  background: #f2f2f7;
  height: 90rpx;
  box-shadow: inset 0 0 0 1rpx rgba(0,0,0,0.04);
}

.footer-btn {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06), 0 1rpx 0 rgba(255,255,255,0.8) inset;
  font-size: 30rpx;
  color: #444;
}

.footer-btn.active {
  color: #111;
  box-shadow: 0 8rpx 22rpx rgba(0,0,0,0.08), 0 0 0 2rpx #fff inset;
}

