page {
  background-color: #f7f7f7;
  color: #222;
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.header {
  position: relative;
  height: 240rpx;
  background: linear-gradient(135deg, #ffe6d9 0%, #fff3e0 100%);
  border-bottom: 1px solid #f0f0f0;
  overflow: hidden;
}

.title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 44rpx;
  font-weight: 700;
  color: #7a4b2b;
  text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.cute-font {
  font-family: "Apple Color Emoji","PingFang SC","Hiragino Sans GB","Microsoft YaHei",sans-serif;
  letter-spacing: 2rpx;
}

.header-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.35;
}

.footer-nav {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(12rpx);
