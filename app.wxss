.page {
  background-color: #f7f7f7;
  color: #222;
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.header {
  position: relative;
  height: 240rpx;
  background: linear-gradient(135deg, #ffe6d9 0%, #fff3e0 100%);
  border-bottom: 1px solid #f0f0f0;
  overflow: hidden;
}

.title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 44rpx;
  font-weight: 700;
  color: #7a4b2b;
  text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.cute-font {
  font-family: "Apple Color Emoji","PingFang SC","Hiragino Sans GB","Microsoft YaHei",sans-serif;
  letter-spacing: 2rpx;
}

.header-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.35;
}

.footer-nav {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(12rpx);
  /*  height: 120rpx;*/
  /*  background: #fff;*/
  /*  border-top: 1px solid #f0f0f0;*/
  /*  display: flex;*/
  /*  align-items: center;*/
  /*  justify-content: center;*/
  /*  position: relative; !* 保持在 Flex 流中 *!*/
}

.footer-box {
  display: flex;
  gap: 16rpx;
  padding: 10rpx env(safe-area-inset-left) 10rpx env(safe-area-inset-right);
  margin: 0;
  border-radius: 0;
  background: #f2f2f7;
  height: 90rpx;
  box-shadow: inset 0 0 0 1rpx rgba(0,0,0,0.04);
}


.footer-btn {
    flex: 1;
    text-align: center;
    padding: 18rpx 0;
    font-size: 30rpx;
    border-radius: 16rpx;
    color: #666;
    background: linear-gradient(to bottom, #ffffff, #f0f0f0); /* Subtle gradient for depth */
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1), 0 1rpx 0 rgba(255,255,255,0.8) inset; /* Raised effect */
    transition: all 0.2s ease; /* Smooth transition for active state */
}

.footer-btn.active {
    color: #111;
    font-weight: 600;
    background: linear-gradient(to bottom, #f5f5f5, #ffffff); /* Slightly darker gradient for pressed effect */
    /*border-bottom: 6rpx solid #111;*/
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.08) inset, 0 1rpx 0 rgba(255,255,255,0.6); /* Pressed effect */
}